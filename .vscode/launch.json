{
  "version": "0.2.0",
  "configurations": [{
    "name": "Launch Mocha",
    "type": "node",
    "request": "launch",
    "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
    "args": ["{test,src}/**/*.spec.js", "--no-timeouts"],
    "runtimeArgs": [
      "--require", "${workspaceRoot}/test/mocha-setup.js"
    ],
    "cwd": "${workspaceRoot}"
  }]
}